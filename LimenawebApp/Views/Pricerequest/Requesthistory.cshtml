@model List<LimenawebApp.Models.Price_request.Mdl_PriceChangeHistory.Bolsa_SalesR>
@{
    ViewBag.Title = "Price Request History";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    List<LimenawebApp.Models.Price_request.Mdl_PriceChangeHistory.Help_BolsaUtilizada> lstbolsa = (List<LimenawebApp.Models.Price_request.Mdl_PriceChangeHistory.Help_BolsaUtilizada>)ViewBag.salesHistory;

}

<div class="page__header">
    <div class="container-fluid page__heading-container">
        <div class="page__heading d-flex align-items-center">
            <div class="flex">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Commercial</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Price Change</li>
                    </ol>
                </nav>
                <h1 class="m-0">Price Change History</h1>
            </div>

        </div>
    </div>
</div> <!-- // END page__header -->
<!--Page Header menu-->
<!-- Header Layout Content -->
<div class="mdk-header-layout__content">
    <div class="mdk-drawer-layout js-mdk-drawer-layout" data-push data-responsive-width="992px">
        <div class="mdk-drawer-layout__content page">

            <div class="bg-white border-bottom">
                <div class="container-fluid page__container">
                    <div class="card-header-tabs-basic nav" role="tablist">
                        <a href="@Url.Action("Dashboard_sales","Main")" class="active">Back</a>

                    </div>
                </div>
            </div>
            <div class="container-fluid page__heading-container">
                <div class="page__heading d-flex align-items-center">
                    <div class="flex">

                  
                    </div>
                    <select id="fltperiod" onchange="filterPeriod()" class="form-control" style="width:150px">
                        <option value="0">Select period</option>
                        @foreach (var item in ViewBag.activeperiodos) {
                            if ((item.periodcode + " | " + item.periodname) == ViewBag.period)
                            {
                                <option value="@item.periodcode" selected>@item.periodcode | @item.periodname</option>
                            }
                            else {
                                <option value="@item.periodcode">@item.periodcode | @item.periodname</option>
                            }
                        }
                    </select>
                    <button id="btnsaveproducts" class="btn btn-warning ml-3">Export data</button>
                    <a href="#" data-toggle="modal" data-target="#modal-newbolsa" class="btn btn-success ml-3"> Increase/Decrease Bag</a>
                    <a href="@Url.Action("RequesthistoryNOSR","Pricerequest")" class="btn btn-info ml-3"> Supervisors History</a>
                </div>
            </div>
            <div class="container-fluid page__container">

                <div class="row card-group-row">
                    <div class="col-lg-4 col-md-6 card-group-row__col">
                        <div class="card card-group-row__card">
                            <div class="card-body-x-lg card-body d-flex flex-row align-items-center">
                                <div class="flex">
                                    <div class="card-header__title text-muted mb-2 d-flex">Used Amount <span class="badge badge-warning ml-2">@(Math.Round((Convert.ToDecimal(Model.Sum(c => c.Utilizado))/ Convert.ToDecimal(Model.Sum(c => c.Asignado))*100),2)) %</span></div>
                                    <span class="h4 m-0">$@Model.Sum(c=>c.Utilizado)<small class="text-muted"> / $@Model.Sum(c=>c.Asignado) (Total assigned)</small> </span>
                                </div>
                                <div><i class="material-icons icon-muted icon-40pt ml-3">monetization_on</i></div>
                            </div>
                            <div class="progress" style="height: 3px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: @(Math.Round((Convert.ToDecimal(Model.Sum(c => c.Utilizado))/ Convert.ToDecimal(Model.Sum(c => c.Asignado))*100),2))%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 card-group-row__col">
                        <div class="card card-group-row__card">
                            <div class="card-body-x-lg card-body d-flex flex-row align-items-center">
                                <div class="flex">
                                    <div class="card-header__title text-muted d-flex mb-2">Current Period</div>
                                    <span class="h4 m-0">@ViewBag.period </span>
                                </div>
                                <div><i class="material-icons icon-muted icon-40pt ml-3">insert_invitation</i></div>
                            </div>
                            <div class="progress" style="height: 3px;">
                                <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 card-group-row__col">
                        <div class="card card-group-row__card">
                            <div class="card-body-x-lg card-body d-flex flex-row align-items-center">
                                <div class="flex">
                                    <div class="card-header__title text-muted mb-2">Available Amount <span class="badge badge-warning ml-2">@(100 - Math.Round((Convert.ToDecimal(Model.Sum(c => c.Utilizado)) / Convert.ToDecimal(Model.Sum(c => c.Asignado)) * 100), 2)) %</span></div>
                                    <div class="d-flex align-items-center">
                                        <div class="h4 m-0">$@(Model.Sum(c=>c.Disponible)) </div>

                                    </div>
                                </div>
                                <div><i class="material-icons icon-muted icon-40pt ml-3">contacts</i></div>
                            </div>
                        </div>
                    </div>
                </div>
