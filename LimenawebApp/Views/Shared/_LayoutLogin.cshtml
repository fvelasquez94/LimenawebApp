<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Distribuidora Limena Inc</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Site Description Here">
    <link href="~/Content/assets_login/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />

    <link href="~/Content/assets_login/css/socicon.css" rel="stylesheet" type="text/css" media="all" />

    <link href="~/Content/assets_login/css/flickity.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/assets_login/css/iconsmind.css" rel="stylesheet" type="text/css" media="all" />

    <link href="~/Content/assets_login/css/theme.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/assets_login/css/custom.css" rel="stylesheet" type="text/css" media="all" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700%7CMerriweather:300,300i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="icon" type="image/png" href="~/Content/appcontent/assets/img/ico.png" />
    <!--===============================================================================================-->
    <!--toastr-->
    <link href="~/Content/appcontent/assets/vendor/toastr-master/toastr.css" rel="stylesheet">

</head>
<body>
    <a id="start"></a>
    @RenderBody()

    <a class="back-to-top inner-link" href="#start" data-scroll-class="100vh:active">
        <i class="stack-interface stack-up-open-big"></i>
    </a>
    <script src="~/Content/assets_login/js/jquery-3.1.1.min.js"></script>

    <script src="~/Content/appcontent/assets/vendor/toastr-master/toastr.js"></script>
    <script src="~/Content/assets_login/js/scripts.js"></script>

    @if (TempData["error"] != null)
    {
        <script type="text/javascript">
        window.onload = function () {

            toastr.danger("@(TempData["error"])", "Warning");
        };
        </script>
    }


    @if (TempData["advertencia"] != null)
    {
        <script type="text/javascript">

        $(document).ready(function () {
            toastr.warning("@(TempData["advertencia"])", "Warning");

        });
        </script>
    }


    @if (TempData["exito"] != null)
    {
        <script type="text/javascript">

        $(document).ready(function () {
            toastr.success("@(TempData["exito"])", "Success");

        });
        </script>
    }

</body>
</html>