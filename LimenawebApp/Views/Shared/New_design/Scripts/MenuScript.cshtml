
@{
    Layout = null;
}

<script>
    var string = @Html.Raw(ViewBag.lstDepartments);
    var roles = @Html.Raw(ViewBag.lstRoles);
    string.forEach(function (element) {
        if (element != "Administrator") {
            roles.forEach(function (elementrol) {
                //Commercial
                if (elementrol == "DSD") {
                    document.getElementById("dsd_menu").style.display = "block";
                }
                if (elementrol == "Sales Manager") {
                    document.getElementById("ss2_submenu").style.display = "block";
                    document.getElementById("ss3_submenu").style.display = "block";

                }
                if (elementrol == "Sales Representative") {
                    document.getElementById("ss1_submenu").style.display = "block";
                    document.getElementById("ss3_submenu").style.display = "block";
                    document.getElementById("ss4_submenu").style.display = "block";
                    document.getElementById("ss5_submenu").style.display = "block";
                    document.getElementById("routes_submenu").style.display = "block";
                    //document.getElementById("tasks_submenu").style.display = "block";
                    document.getElementById("tasks_submenu2").style.display = "block";
                    document.getElementById("drop1").style.display = "block";

                    $("#quickAccess_salesreps").show();
                    $("#quickAccess_salesreps2").show();
                }

                //Cognos
                if (elementrol == "Cognos") {
                        $("#quickAccess_cognos").show();
                }



                if (elementrol == "Sales Supervisor") {
                    document.getElementById("routes_submenu").style.display = "block";
                    document.getElementById("drop1").style.display = "block";
                    document.getElementById("ss1_submenu").style.display = "block";
                    document.getElementById("ss3_submenu").style.display = "block";
                    document.getElementById("ss4_submenu").style.display = "block";
                    document.getElementById("ss5_submenu").style.display = "block";
                    document.getElementById("tasks_submenu").style.display = "block";
                    document.getElementById("tasks_submenu2").style.display = "block";

                }
                if (elementrol == "Credits Authorizer") {
                    document.getElementById("ss4_submenu").style.display = "block";
                    document.getElementById("ss5_submenu").style.display = "block";
                }
            });
        }
        if (element == "Operations") {
            document.getElementById("home_menuOper").style.display = "block";
            document.getElementById("oper_menu").style.display = "block";

            roles.forEach(function (elementrol) {
                if (elementrol == "Planning") {
                    document.getElementById("invo1_submenu").style.display = "block";
                    document.getElementById("reportop1_submenu").style.display = "block";
                }
                if (elementrol == "Quality Control") {
                    document.getElementById("invo2_submenu").style.display = "block";
                }
                if (elementrol == "SO Print") {
                    document.getElementById("invo3_submenu").style.display = "block";

                }
                if (elementrol == "Purchases") {
                    document.getElementById("operpur_submenu").style.display = "block";
                }
                if (elementrol == "Contacts") {
                    document.getElementById("tasks_submenu2").style.display = "block";
                    document.getElementById("marketing_menu").style.display = "block";
                    document.getElementById("manag_menu").style.display = "block";
                    document.getElementById("newcustomers_submenu").style.display = "block";
                }
            });
        }
        if (element == "Inventory") {
            //document.getElementById("home_menuInventory").style.display = "block";
            document.getElementById("inventory_menu").style.display = "block";

            roles.forEach(function (elementrol) {

            });
        }
        if (element == "Management") {
            document.getElementById("manag_menu").style.display = "block";
            document.getElementById("dsd_menu").style.display = "block";
            document.getElementById("invo1_submenu").style.display = "block";
            document.getElementById("invo2_submenu").style.display = "block";
            document.getElementById("invo3_submenu").style.display = "block";
            document.getElementById("accr_menu").style.display = "block";
            document.getElementById("oper_menu").style.display = "block";
            document.getElementById("operpur_submenu").style.display = "block";
            document.getElementById("forms_submenu").style.display = "block";
            document.getElementById("newcustomers_submenu").style.display = "block";
            document.getElementById("users_submenu").style.display = "block";
            document.getElementById("ss1_submenu").style.display = "block";
            document.getElementById("ss2_submenu").style.display = "block";
            document.getElementById("ss3_submenu").style.display = "block";
            document.getElementById("ss4_submenu").style.display = "block";
            document.getElementById("ss5_submenu").style.display = "block";
            document.getElementById("routes_submenu").style.display = "block";
            document.getElementById("drop1").style.display = "block";
            document.getElementById("reportop1_submenu").style.display = "block";
            document.getElementById("tasks_submenu").style.display = "block";
            document.getElementById("tasks_submenu2").style.display = "block";
            //document.getElementById("home_menuInventory").style.display = "block";
            document.getElementById("marketing_menu").style.display = "block";
        }

    });
</script>
<!--END-->
