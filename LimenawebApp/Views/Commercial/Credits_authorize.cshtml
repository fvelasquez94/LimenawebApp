}
                                @if (product.URL_image2 == "" || product.URL_image2 == null)
            {

            }
            else
            {
                    <img class="myImg" style="width:40px;height:40px;" onclick="showFullImage(this.id)" id="img2_@product.ID_creditRequest" src="@Url.Content(product.URL_image2)" alt="" />
}

                            </td>
                            <td style="font-size:10px;">@product.comments</td>
                            <td style="font-size:11px;">

