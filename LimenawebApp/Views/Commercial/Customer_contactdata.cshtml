@model List<LimenawebApp.Controllers.CommercialController.ContactsCustomers>
    @{
        ViewBag.Title = "Distribuidora Limeña - Customer Contact Data";
    }


    <!--main content wrapper-->
    <div class="content-wrapper">
        <div class="box-container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card card-shadow mb-4">
                            <div class="card-header border-0">
                                <div class="custom-title-wrap bar-success">
                                    <div class="custom-title">Customers Contact Data</div>
                                </div>
                            </div>
                            <div class="card-body">

                                <div class="table-responsive">
                                    <table id="data_tableEditor2" class="table table-bordered" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>CUSTOMER</th>
                                                <th>TOTAL CONTACTS</th>
                                                <th>PEPPERI STATUS</th>
                                                <th>CUSTOMER STATUS</th>
                                                <th>ACTIONS</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var customer in Model) {
                                                if (customer.StatusCustomer == "4")
                                                {
                                                <tr style="background-color:rgba(0, 0, 0, .02);">
                                                    <td>@customer.CardCode</td>
                                                    <td>@customer.CardName</td>
                                                    <td>@customer.Total</td>
                                                    <td>
                                                    @if (customer.IsBuyer == "Y")
                                                    {
                                                        <label class="badge badge-success">Online Account</label>
                                                    }
                                                    else {
                                                        <label class="badge badge-warning">No Account</label>
                                                    }</td>
                                                                                                     
                                                    <td>
                                                        <select class="form-control selcustomerstatus" style="width:180px;" id="@customer.CardCode">
                                                        @if (customer.StatusCustomer == "1") { <option value="1" selected>Active Customer</option>} else {<option value="1">Active Customer</option> }
                                                              @if (customer.StatusCustomer == "2") { <option value="2" selected>Closed Store</option>} else {<option value="2">Closed Store</option> }
                                                              @if (customer.StatusCustomer == "3") { <option value="3" selected>Unvisited</option>} else {<option value="3">Unvisited</option> }
                                                              @if (customer.StatusCustomer == "4") { <option value="4" selected disabled>Not assigned</option>} else {<option value="4" disabled>Not assigned</option> }

                                                        </select>
                                                    </td>
                                                    <td>
                                                   
                                                        <a class="btn btn-info btn-sm" href="@Url.Action("Contacts_details", "Commercial", new { id=customer.CardCode})">View</a>
                                                    
                                                    
                                                    </td>
                                                </tr>
                                                }
                                                else {
                                                <tr>
                                                    <td>@customer.CardCode</td>
                                                    <td>@customer.CardName</td>
                                                    <td>@customer.Total</td>
                                                    <td>
                                                    @if (customer.IsBuyer == "Y")
                                                    {
                                                        <label class="badge badge-success">Online Account</label>
                                                    }
                                                    else {
                                                        <label class="badge badge-warning">No Account</label>
                                                    }</td>
                                                                                                     
                                                    <td>
                                                        <select class="form-control selcustomerstatus" style="width:180px;" id="@customer.CardCode">
                                                        @if (customer.StatusCustomer == "1") { <option value="1" selected>Active Customer</option>} else {<option value="1">Active Customer</option> }
                                                              @if (customer.StatusCustomer == "2") { <option value="2" selected>Closed Store</option>} else {<option value="2">Closed Store</option> }
                                                              @if (customer.StatusCustomer == "3") { <option value="3" selected>Unvisited</option>} else {<option value="3">Unvisited</option> }
                                                              @if (customer.StatusCustomer == "4") { <option value="4" selected disabled>Not assigned</option>} else {<option value="4" disabled>Not assigned</option> }

                                                        </select>
                                                    </td>
                                                    <td>
                                                   
                                                        <a class="btn btn-info btn-sm" href="@Url.Action("Contacts_details", "Commercial", new { id=customer.CardCode})">View</a>
                                                    
                                                    
                                                    </td>
                                                </tr>
                                                }

                                            }
                                        </tbody>
                                        <tfoot>
                                        </tfoot>

                                    </table>

                                </div>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <script>
    window.onload = function () {
        $('#data_tableEditor2').DataTable({
            dom: 'lBfrtip',
            select: true,
            
            "order": [[3, "desc"]]
        });

  
    }

    </script>