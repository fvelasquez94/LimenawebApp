                                        <div class=" col-md-3">
                                            @if (ViewBag.isAdmin == 1)
        {
                                    <div class="card card-shadow mb-4">
                                        <div class="card-header border-0">
                                            <div class="custom-title-wrap bar-success">
                                                <div class="custom-title">
                                                    <div class="row">
                                                        <button class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#createModal"><i class="mdi fa fa-plus"></i> Create new Route</button>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
}

                                            <div class="card card-shadow mb-4">
                                                <div class="card-header border-0">
                                                    <div class="custom-title-wrap bar-primary">
                                                        <div class="custom-title">Route Details</div>
                                                    </div>
                                                </div>
                                                <div class="card-body" id="hiddenDiv" style="display:none;">
                                                    @if (ViewBag.isAdmin == 1)
                {
                                    <a href="#" id="idroutedel" class="count online ml-auto" data-toggle="modal" data-target="#deleteModal" data-IDr=""><i class="close ml-auto fa fa-close"></i></a>
                                    <a href="#" id="idrouteedit" class="count online ml-auto" data-toggle="modal" data-target="#editModal" data-RepeatM="" data-IDr=""><i class="close ml-auto fa fa-edit"></i></a>
}
                                                    @if (ViewBag.isAdmin == 1)
                {
                                    <p id="nameofroute">Name of the Route</p>
}
else
{
                                    <p id="nameofroute2">Name of the Route</p>
}


                                                    <div class="d-flex justify-content-between mt-2">

                                                        <small id="porcentajeroute">0 %</small>
                                                    </div>
                                                    <div class="progress progress-sm mt-2">
                                                        <div id="progressbarroute" class="progress-bar bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div><br />
                                                    <div class="d-flex align-items-center">
                                                        <small class="font-weight-bold mr-2 mb-0">Reps</small>

                                                    </div>
                                                    <div class="wrapper mt-3" id="appendDivReps">

                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <small class="font-weight-bold mr-2 mb-0">Visits</small>
                                                        <div class="badge badge-inverse-primary badge-pill" id="countVisits">0</div>
                                                    </div>
