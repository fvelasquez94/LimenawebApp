}

<!--main content wrapper-->
<div class="content-wrapper">
    <!--/creative states-->
    <div class="box-container">
        <div class="container-fluid">
            <!--page title-->
            <!--/page title-->
            <!--calendar-->
            <div class="row">

            
                    <div class="card card-shadow mb-4">

                        <div class="card-body">
                            <ul class="nav nav-pills nav-pills-success mb-4" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#tab-p-i_1"><i class="icon-calendar pr-2"></i> Scheduled Routes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tab-p-i_2"><i class="icon-chart pr-2"></i>Stats</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tab-p-i_3"><i class="icon-organization pr-2"></i>Map</a>
                                </li>
