@model IEnumerable<LimenawebApp.Models.Purchase_catalog>
@{
    ViewBag.Title = "Distribuidora Limeña - Product Catalog";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

                 <!-- Page Header -->
                            <div class="dt-page__header">
                                <nav class="mb-0 breadcrumb">
                                    <a href="javascript:void(0)" class="breadcrumb-item">Operations</a>
                                    <span class="active breadcrumb-item">Products Catalog</span>
                                </nav>
                            </div>
                            <!-- /page header -->
                            <!-- Grid Item -->
                            <!--main content wrapper-->

                        <div class="card-body pt-3 pb-4" style="font-size:12px;line-height:1.5;">
                            <div class="table-responsive">
                                <table id="data_tableEditor2" class="table" cellspacing="0">
                                    <thead>
                                        <tr>
                                  
                                            <th>CODIGO EN SAP</th>
                                            <th>DESCRIPCION</th>
                                            <th>VENDOR</th>
                                            <th>FACTOR DE COMPRA</th>
                                            <th hidden>FACTOR DE COMPRA (QUIEBRE)</th>
                                            <th>FACTOR UNIDAD DE COMPRA</th>
                                            <th hidden>POLITICA DE COBERTURA</th>
                                            <th>COSTO</th>
                                            <th style="width:300px">COMENTARIOS</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var data in Model)
                                        {
                                            <tr >
                                                <td style="padding: .25rem;" class="editProduct">
                                                    @data.ProductCode
                                                </td>
                                                <td style="padding: .25rem;">@data.ProductName</td>
                                                <td style="padding: .25rem;">@data.Vendor_Name</td>
                                                <td class="editable editFactorN" style="padding: .25rem;">@data.FactorCompra</td>
                                                <td hidden class=" editFactorQ" style="padding: .25rem;">@data.FactorCompra_quiebre</td>
                                                <td class="editable editFactorUC" style="padding: .25rem;">@data.FactorUnidadCompra</td>
                                                <td hidden class=" editPolitica">@data.Politica_cobertura</td>
                                                <td class="editable editCosto">@data.Costo</td>
                                                <td  style="padding: .25rem;"><textarea style="width:300px" class="editComentarios">@data.Comentarios</textarea> </td>
                                                <td style="padding: .25rem;"><a href="JavaScript:Void(0);" class="btn btn-sm btn-outline-success btn-sm form-pill savebtn" style="display:none;">Save</a> </td>
                                            </tr>


                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>

