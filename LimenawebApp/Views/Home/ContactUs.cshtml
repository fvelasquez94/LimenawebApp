@using Recaptcha.Web.Mvc
@{
    ViewBag.Title = "Distribuidora Limeña - Líderes en productos latinos";
}

<div class="maincontent-services">
    <div class="header">
        <h1 class="h1-subpage-title white">Contáctanos</h1>
    </div>
</div>
<div class="contact-container">

    <div class="mapouter">
        <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=distribuidora%20limena&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe></div>
    </div>


    <div class="form-block-2 w-form">
        @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post,
new { enctype = "multipart/form-data", @class = "form-2" }))
    {
        <h3>Ponte en contacto</h3>
        <input type="text" class="w-input" maxlength="256" name="Nombre" data-name="Nombre" placeholder="Nombre" id="Nombre" required="">
        <input type="text" class="w-input" maxlength="256" name="Empresa" data-name="Empresa" placeholder="Empresa" id="Empresa" required="">
        <input type="text" class="w-input" maxlength="256" name="email" data-name="Email" placeholder="Correo electrónico" id="email" required="">
        <textarea id="Mensaje" name="Mensaje" data-name="Mensaje" maxlength="5000" placeholder="Escribe tu mensaje aquí" required="" class="w-input"></textarea>

        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)

        <input type="submit" value="Enviar" data-wait="Please wait..." class="formbutton w-button">

}
        @if (ViewBag.showmessage == 1)
    {
        <div class="w-form-done" style="display:inline-block !important">
            <div>Thank you! Your submission has been received!</div>
        </div>
}
else if (ViewBag.showmessage == 3)
{
    <div class="w-form-fail" style="display:inline-block !important">
        <div>Please complete the reCAPTCHA.</div>
    </div>
}
else if (ViewBag.showmessage == 4)
{
    <div class="w-form-fail" style="display:inline-block !important">
        <div>The reCAPTCHA is incorrect.</div>
    </div>
}
else if (ViewBag.showmessage == 0)
{

}


    </div>
</div>

