<div class="bootstrap-wrapper">
    <div class="container">
        <form id="myform">
            <div class="row">

                <div class="col-md-5">
                    <h3>Sales Representative</h3>

                    <select class="select-box" style="margin-bottom:10px !important" name="idrep" id="idrep">
                        <option value="0">Select a sales representative</option>
                        @foreach (var user in ViewBag.lstreps)
        {
                <option value="@user.ID_User">@user.Name @user.Lastname</option>

}
                    </select>
                    <h3>General</h3>
                    <input type="text" class="w-input" maxlength="256" name="CardName" placeholder="Empresa (*)" id="CardName" required="">
                    <input type="text" class="w-input" maxlength="256" name="Phone1" placeholder="Telefono (*)" id="Phone1" required="">
                    <input type="email" class="w-input" maxlength="256" name="E_Mail" placeholder="Correo electrónico (*)" id="E_Mail" required>
                    <input type="text" class="w-input" maxlength="256" name="IntrntSite" placeholder="Sitio Web" id="IntrntSite">
                    <input type="text" class="w-input" maxlength="256" name="TAXID" placeholder="UNIFIED FEDERAL TAX ID (*)" id="TAXID" required="" autocomplete="off">
                    <input type="text" class="w-input" maxlength="256" name="TAXCERTNUM" placeholder="RESALES TAX CERTIFICATE NUMBER" id="TAXCERTNUM" autocomplete="off">

                    <h3>Datos de Contacto</h3>
                    <input type="text" class="w-input" maxlength="256" name="FirstName" placeholder="Nombre (*)" id="FirstName" required="">
                    <input type="text" class="w-input" maxlength="256" name="LastName" placeholder="Apellido (*)" id="LastName" required="">
                    <input type="text" class="w-input" maxlength="256" name="Position" placeholder="Cargo (*)" id="Position" required="">
                    <input type="text" class="w-input" maxlength="256" name="Tel1" placeholder="Telefono (*)" id="Tel1" required="">
                    <input type="email" class="w-input" maxlength="256" name="E_MailL" placeholder="Correo electrónico (*)" id="E_MailL" required="">

                    <h3>Dirección</h3>
                    <select name="countryId" style="margin-bottom:10px !important" class="select-box" id="countryId" required>
                        <option value="">Seleccione País</option>
                        <option value="USA">United States</option>
                    </select>

                    <input type="text" class="w-input" maxlength="256" name="ZipCode" placeholder="ZIP CODE (*)" id="ZipCode" required="">
                    <input name="cityId" class="w-input" id="cityId" placeholder="Ciudad (*)" required readonly>
                    <input name="stateId" class="w-input" id="stateId" placeholder="Estado (*)" required readonly>


