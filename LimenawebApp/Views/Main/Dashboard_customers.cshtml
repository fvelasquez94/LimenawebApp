@model IQueryable<LimenawebApp.Models.Tb_Bonificaciones>
@{
    ViewBag.Title = "Distribuidora Limeña - Home Customers";
}

<!--main content wrapper-->
<div class="content-wrapper">

    <!--/creative states-->
    <div class="box-container">
        <div class="container-fluid">
            <!--sales statistical overview-->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header border-0">
                            <div class="custom-title-wrap bar-info">
                                <div class="custom-title">Bonifications to Approve</div>
                                <div class=" widget-action-link">
                                    <div class="dropdown">
                                        <a href="#" class="btn btn-transparent text-secondary dropdown-hover p-0" data-toggle="dropdown">
                                            <i class=" vl_ellipsis-fill-h"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right vl-dropdown">

                                            <a class="dropdown-item" href="#"> Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row col-xl-4">
                            <label class="col-sm-12 col-form-label col-form-label-sm">Filter by Date</label>
                            <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px;margin-left: 14px; margin-right:15px; border: 1px solid #ccc; width: 100%">
                                <i class="mdi mdi-calendar"></i>&nbsp;
                                <span></span> <i class="fa fa-caret-down"></i>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-12">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    PRODUCT
                                                </th>
                                                <th>
                                                    QTY
                                                </th>
                                                <th>
                                                    DATE
                                                </th>
                                                <th>ACTIONS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Producto</td>
                                                    <td>@item.Cantidad</td>
                                                    <td>@Convert.ToDateTime(item.FechaIngreso).ToShortDateString()</td>
                                                    <td>
                                                        @if (item.Estado == 1)
                                                        {
                                                            <button class="btn btn-sm btn-outline-info btnAutorizar" data-qty="@item.Cantidad" id="@item.ID_bonificacion">Approve</button>
                                                            <button class="btn btn-sm btn-outline-danger btnDeny" id="@item.ID_bonificacion">Deny</button>
                                                        }
                                                        else if (item.Estado == 2 || item.Estado==3)
                                                        {
                                                            <span class="badge text-success">Approved</span>
                                                        }
                                                        else if (item.Estado == 4)
                                                        {
                                                            <span class="badge text-danger">Denied</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/sales statistical overview-->
            <!--/issue fixing & profile info-->
            <!--employee data table-->
            <!--/employee data table-->
            <!--notification & regional sales-->
            <!--/notification & regional sales-->
        </div>
    </div>
</div>
<!--/main content wrapper-->

<div class="modal fade bd-example-modal-lg" id="tbbonificaciones" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myLargeModalLabel">Approve bonification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            
            <div class="modal-body">
                <span class="text-muted">Are you sure you want to approved this bonification?</span>
                <div class="form-group">
                    <label >Quantity to approve:</label>
                    <input id="idAut" hidden />
                    <input id="CantAut" type="text" class="form-control filternumbers" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnAutorizar" class="btn btn-success" >Save</button>

            </div>
        </div>
    </div>
</div>