@model List<LimenawebApp.Models.Payments.Payments_routesmain>
@{
    ViewBag.Title = "ReceivePayment";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    DateTime fecha = new DateTime(2000, 01, 01);
    var ruta = "";
}


<div class="page__header">
    <div class="container-fluid page__heading-container">
        <div class="page__heading d-flex align-items-center">
            <div class="flex">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Finance</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Payments</li>
                    </ol>
                </nav>
                <h1 class="m-0">Payments</h1>
            </div>

        </div>
    </div>
</div> <!-- // END page__header -->
<!--Page Header menu-->
@Html.Partial("~/Views/Shared/New_design/Menus/Finance.cshtml")


<div class="container-fluid page__container">
    <div class="card card-form d-flex flex-column flex-sm-row">
        <div class="card-form__body card-body-form-group flex">
            <div class="row">
                <div class="col-sm-auto">
                    <div class="form-group">
                        <label for="filter_name">Search</label>
                        <input id="filter_name" type="text" class="form-control" placeholder="Enter keyword">
                    </div>
                </div>
                @*<div class="col-sm-auto">
                    <div class="form-group">
                        <label for="filter_buckets">Routes</label><br>
                        <select id="filter_buckets" class="custom-select" style="width: 150px;">
                            <option value="all">Any</option>
                            <option value="S000474">ID - Route Name</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-auto">
                    <div class="form-group">
                        <label for="filter_assigned">Driver</label><br>
                        <select id="filter_assigned" class="custom-select" style="width: 150px;">
                            <option value="all">Any</option>
                            <option value="1">Driver 1</option>
                            <option value="2">Driver 2</option>
                            <option value="3">Driver 3</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-auto">
                    <div class="form-group">
                        <label for="filter_assigned">Status</label><br>
                        <select id="filter_assigned" class="custom-select" style="width: 150px;">
                            <option value="all">Any</option>
                            <option value="2">Finished</option>
                            <option value="1">Waiting for Driver</option>
                            <option value="3">Waiting for submit</option>
                        </select>
                    </div>
                </div>*@
                <div class="col-sm-auto">
                    <div class="form-group" style="width: 200px;">
                        <label for="filter_date">Daterange</label>
                        <input id="filter_date" type="text" class="form-control" placeholder="Range example" data-toggle="daterangepicker" data-daterangepicker-start-date="@Convert.ToDateTime(ViewBag.filtrofechastart).ToString("yyyy/MM/dd")" data-daterangepicker-end-date="@Convert.ToDateTime(ViewBag.filtrofechaend).ToString("yyyy/MM/dd")">
                    </div>
                </div>
            </div>
        </div>

    </div>


    @if (Model != null)
    {
        if (Model.Count > 0)
        {
            foreach (var item in Model.OrderBy(c => c.DeliveryDate).ThenBy(c => c.Id_Delivery))
            {
                if (fecha != item.DeliveryDate)
                {
                    fecha = Convert.ToDateTime(item.DeliveryDate);
                    <div class="separator">@fecha.ToLongDateString()</div>

                }


                <div class="row align-items-center projects-item mb-1 rowcustom">

                    <div class="col-sm">
                        <div class="card m-0">
                            <div class="px-4 py-3">
                                <div class="row align-items-center">
                                    <div class="col" style="min-width: 300px">
                                        <div class="d-flex align-items-center">
                                            <a style="text-decoration: none;cursor:default;" href="#" class="text-body"><strong class="text-15pt mr-2">@item.Id_Delivery - @item.DeliveryRoute</strong></a>
                                            <span class="badge badge-warning">WAITING FOR DRIVER</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <small class="mr-2">Truck: @item.Truck </small>
                                        </div>
                                    </div>
                                    <div class="col-auto d-flex align-items-center">
                                        <i class="material-icons icon-muted icon-20pt mr-2">account_circle</i>
                                        <a style="text-decoration: none;cursor:default;" href="#" class="text-body">@item.Driver</a>
                                    </div>
                                    <div class="col-auto d-flex align-items-center" style="min-width: 140px;">
                                        <a href="#" data-route="@item.Id_Delivery" data-toggle="modal" data-target="#modal-large" class="text-dark-gray">DETAILS</a>
                                        <i class="material-icons icon-muted icon-20pt ml-2">folder</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            }
        }
        else
        {
            <div>
                <label>No data to show</label>
            </div>
        }


    }
    else
    {
        <div>
            <label>No data to show</label>
        </div>
    }


</div>
